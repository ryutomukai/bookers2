<% if @user.errors.any? %>
 <%= @user.errors.count %>error
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
              <div class><%= f.text_field :name, autofocus: true, id:"inputName",placeholder:"名前"%></div>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <div class><%= f.file_field :profile_image,placeholder: "プロフィール画像",accept: "image/*" %></div>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <div class><%= f.text_area :introduction,autofocus: true, id:"inputintroduction",placeholder:"自己紹介" %></div>
          </div>
          <div class="form-group">
            <%= f.submit "Update User"%>
          </div>
          <% end %>
    </div>
  </div>
</div>