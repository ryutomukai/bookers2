<% if @book.errors.any? %>
 <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		    <label for="book_title">Title</label>
  		    <%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
  		    <%= f.text_field :title, autofocus: true, id:"inputTitle",placeholder:"タイトル"%>
  		<div class="form-group">
  		    <label for="book_body">Opinion</label><br>
  		    <%= f.text_area :body,autofocus: true, id:"inputopinion",placeholder:"感想" %>
  		</div>
  		<%= f.submit "Update Book"%>
  		<% end %>

  		<%= link_to "Show" , book_path(@book)  %>
  		<%= link_to "Back" , books_path %>
  	</div>
  </div>
</div>