<h2>Editing Book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle",placeholder:"タイトル"%>
  <%= f.text_area :body,autofocus: true, id:"inputopinion",placeholder:"感想" %>
  <%= f.submit "Update User"%>
<% end %>
